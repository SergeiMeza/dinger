<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/navigation_bottom_bar_elevation">
    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_bottom_bar_height"
        android:background="@color/primary"
        app:itemTextColor="@color/navigation_bar_item_foreground"
        app:itemIconTint="@color/navigation_bar_item_foreground"
        app:menu="@menu/view_navigation_bar" />
</android.support.v7.widget.CardView>
